<h1 class="index-headline">Books</h1>
<table class="books-table">
	<tr>
		<th>Title</th><th>Body</th><th></th><th></th><th></th>
	</tr>
	<% @books.each do |book| %>
		<tr>
	 		<td><%= book.title %></td><td><%= book.body %></td><td><%= link_to "Show", book_path(book) %></td>
	 		<td><%= link_to "Edit", edit_book_path(book) %></td><td><%= link_to "Destroy", book_path(book), method: :delete %></td>
		</tr>
	<% end %>
</table>
<div class="new-books">
	<h4>New book</h4>
	<%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>
		<h4>Body</h4>
		<%= f.text_area :body %>
		<%= f.submit "Create Book"%>
	<% end %>
</div>